{
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "checkJs": true,
    "jsx": "preserve",
    "allowJs": true
  },
  "include": ["vite.config.ts", "env.ts", "src/lib/i18n"]
}
